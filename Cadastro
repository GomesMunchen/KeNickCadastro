#include <locale.h>
#include <stdio.h>
#include <string.h>

char nome[9][32];
int  idade[9]; 
int  nivel[9];//0 a 5
int  max, i;

void main(){
	setlocale(LC_ALL,"");
	printf("Cadastro por Kennedy");
	printf("Cadastrar quantos? Até 10: ");
	do {
		scanf("%d",&max); 
		if ( max<1 || max>10 ) printf("Só podem ser feito até 10 cadastros. Digite um número válido!\n");
	}
	
	while( max<1 || max>10 );
	
	printf("\nCADASTRAMENTO [%d]\n\n",max);

	i = 0;
	while(i<max){
   		printf("\nId   : %d\n",i+1);
		printf("NOME : ");
		scanf("%s",nome[i]);
		
		printf("IDADE: ");
		scanf("%d",&idade[i]);
		
		printf("NÍVEL: ");
		do {
			scanf("%d",&nivel[i]);
			if ( nivel[i] < 0 || nivel[i] > 5) printf("Nível inválido! Digite um nível entre 0 e 5!\n");
		}
			
		while ( nivel[i] < 0 || nivel[i] > 5 );
		
		i = i + 1;
	}

	i = 0;
	while(i<max){
		printf("\nDados Armazenados:\n%s - %d [%d]", nome[i], idade[i], nivel[i]);
		i = i + 1;
	}
	
	
	
}
