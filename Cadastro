#include <locale.h>
#include <string.h>

char nome[9][32];
int  idade[9];
int  nivel[9];
int  max, i;

void main(){
setlocale(LC_ALL,"");
printf("Cadastrar quantos? Até 10: ");
do scanf("%d",&max); while( max<1 || max>10 );
	
printf("\nCADASTRAMENTO [%d]\n\n",max);

i = 0;
while(i<max){
printf("\nId   : %d\n",i+1);
printf("NOME : ");
scanf("%s",nome[i]);
		
printf("IDADE: ");
scanf("%d",&idade[i]);
		
printf("NÍVEL: ");
scanf("%d",&nivel[i]);
		
i = i + 1;}

i = 0;
while(i<max){
printf("\n%s - %d [%d]", nome[i], idade[i], nivel[i]);
i = i + 1;}}
